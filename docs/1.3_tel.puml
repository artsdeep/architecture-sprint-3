@startuml
entity Device {
  * device_id : int
  --
  device_name : varchar
  status : varchar
  user_id : int
  device_type_id : int
}

entity Telemetry {
  * telemetry_id : int
  --
  device_id : int
  timestamp : datetime
  metric_name : varchar
  value : float
}

entity Alert {
  * alert_id : int
  --
  device_id : int
  alert_type : varchar
  created_at : datetime
  resolved : boolean
}

Device ||--o{ Telemetry : "generates"
Device ||--o{ Alert : "triggers"
@enduml
